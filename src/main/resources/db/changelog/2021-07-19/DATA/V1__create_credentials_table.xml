<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="V1__create_credentials_table" author="German Pisarev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="credentials"/>
            </not>
        </preConditions>

        <createTable tableName="credentials">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"
                             uniqueConstraintName="unique__pkey__credentials"
                             primaryKeyName="pkey__credentials"/>
            </column>
            <column name="login" type="varchar(255)">
                <constraints unique="true"
                             nullable="false"
                             uniqueConstraintName="unique__login__credentials"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints unique="true"
                             nullable="false"
                             uniqueConstraintName="unique__password__credentials"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>