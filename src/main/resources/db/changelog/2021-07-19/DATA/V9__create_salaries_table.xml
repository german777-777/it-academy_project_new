<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

        <changeSet id="V9__create_salaries_table" author="German Pisarev">
            <preConditions onFail="MARK_RAN">
                <not>
                    <tableExists tableName="salaries"/>
                </not>
                <and>
                    <tableExists tableName="users"/>
                </and>
            </preConditions>

            <createTable tableName="salaries">
                <column name="id" type="bigint" autoIncrement="true">
                    <constraints primaryKey="true"
                                 uniqueConstraintName="unique__pkey__salaries"
                                 primaryKeyName="pkey__salaries"/>
                </column>
                <column name="teacher_id" type="bigint">
                    <constraints nullable="false"/>
                </column>
                <column name="date_of_issue" type="date">
                    <constraints nullable="false"/>
                </column>
                <column name="count" type="int">
                    <constraints nullable="false"/>
                </column>
            </createTable>

            <addForeignKeyConstraint baseTableName="salaries" baseColumnNames="teacher_id"
                                     constraintName="salaries__users__id"
                                     referencedTableName="users"
                                     referencedColumnNames="id"/>
        </changeSet>

</databaseChangeLog>